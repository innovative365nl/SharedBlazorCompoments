@namespace Innovative.Blazor.Components.Components
@if (visible)
{
    <div class="innovative-alert @GetSeverityClass()">
        @if (GetSeverityClass() == "innovative-alert-info")
        {
            <span class="material-symbols-outlined">
                info
            </span>
        }
        @if (GetSeverityClass() == "innovative-alert-success")
        {
            <span class="material-symbols-outlined">
                check_small
            </span>
        }
        @if (GetSeverityClass() == "innovative-alert-warning")
        {
            <span class="material-symbols-outlined">
                campaign
            </span>
        }
        @if (GetSeverityClass() == "innovative-alert-error")
        {
            <span class="material-symbols-outlined">
                dangerous
            </span>
        }
        @if (!string.IsNullOrEmpty(Summary))
        {
            <div class="innovative-alert-summary">
                @Summary
            </div>
        }
        @if (!string.IsNullOrEmpty(Detail))
        {
            <div class="innovative-alert-detail">@Detail</div>
        }
        @if (ChildContent != null)
        {
            <div class="innovative-alert-content">@ChildContent</div>
        }
        @if (Closable)
        {
        <button class="innovative-alert-close" @onclick="Close" aria-label="Close">
                <span class="material-symbols-outlined">
                    close
                </span>
        </button>
        }
    </div>
}

@code {
    private string GetSeverityClass() => Severity switch
    {
        AlertSeverity.Success => "innovative-alert-success",
        AlertSeverity.Warning => "innovative-alert-warning",
        AlertSeverity.Error => "innovative-alert-error",
        _ => "innovative-alert-info"
    };
}
